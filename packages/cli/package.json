{
  "name": "@evalstudio/cli",
  "version": "0.1.0",
  "description": "Command-line interface for EvalStudio",
  "type": "module",
  "bin": {
    "evalstudio": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "web-dist"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "rm -rf web-dist && cp -r ../web/dist web-dist",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist web-dist"
  },
  "keywords": ["eval", "evaluation", "testing", "chatbot", "ai", "llm", "cli"],
  "repository": {
    "type": "git",
    "url": "https://github.com/Treatwell-AI/evalstudio.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "evalstudio": "workspace:*",
    "@evalstudio/api": "workspace:*",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.10",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT"
}
